%div.static-page
  = form_for @static_page, :html => {:id => "static_pages_form"} do |form|
    %fieldset
      %legend
        = t("static_pages.form.title")
      %ul
        %li
          = form.label :title
          = form.text_field :title
        %li
          = form.label :content
          = form.text_area :content
    = buttons_bar do
      = button_ok
      = button_cancel(static_page_path(1))
