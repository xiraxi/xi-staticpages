%dl.static_page
  %dt
    = field_label(StaticPage, :title)
  %dd
    = link_to(item.title, static_page_path(item))
  %dt
    = field_label(StaticPage, :locale)
  %dd
    = item.locale
  - if item.work_as_directory
    %dt
      = t("static_pages.children.list")
    %dd
      = render :partial => "item", :collection => item.children
